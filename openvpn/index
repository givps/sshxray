    <h1>OpenVPN Download Center</h1>
    <p>Select your OpenVPN configuration below.</p>
    <table id="fileTable">
        <tr>
            <th>File Name</th>
            <th>Size</th>
            <th>Action</th>
        </tr>
    </table>

<script>
const files = ["ovpn.zip", "ssl.ovpn", "tcp.ovpn", "udp.ovpn"];
const table = document.getElementById("fileTable");

function formatSize(bytes) {
    if (bytes >= 1048576) return (bytes / 1048576).toFixed(2) + " MB";
    if (bytes >= 1024) return (bytes / 1024).toFixed(1) + " KB";
    return bytes + " B";
}

files.forEach(async file => {
    const row = document.createElement("tr");
    row.innerHTML = `
        <td>${file}</td>
        <td id="size-${file}">Checking...</td>
        <td><a href="${file}" class="download-btn" download>Download</a></td>
    `;
    table.appendChild(row);

    try {
        const res = await fetch(file, { method: 'HEAD' });
        if (!res.ok) throw new Error();
        const size = res.headers.get("content-length");
        document.getElementById(`size-${file}`).innerText = size ? formatSize(parseInt(size)) : "Unknown";
    } catch {
        document.getElementById(`size-${file}`).innerText = "Not found";
    }
});
</script>

